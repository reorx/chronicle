

#chronicle

  .decorates
    .date
      position absolute
      left 0
      top 0
      width 100px
      height 30px
      background #f5f5f5
      border-radius 5px 0 5px 0
      text-align center
      line-height 30px
  .container
    height 740px
    position relative

    .yearline
      margin 0 auto
      width 2px
      height 100%
      position relative
      background #aaa

      .point
        position absolute
      .year.point
        width 12px
        height 12px
        left -5px
        border-radius 6px
        background #333
      .month.point
        width 8px
        height 8px
        left -3px
        border-radius 4px
        background #333
      .day.point
        width 4px
        height 4px
        left -1px
        border-radius 2px
        background #333
      .start
        top -6px
      .end
        bottom -6px

    .ruler
      display none
      position absolute
      height 1px
      background red

